{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "set-dev": "npm run env NODE_ENV=development",
    "set-prod": "npm run env NODE_ENV=production",
    "serve": "npm run set-dev && firebase serve --only functions",
    "deploy": "npm run set-prod firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha",
    "test-all": "nyc mocha test/index.test.js 2>&1 | tee test.log"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "firebase-admin": "^6.5.0",
    "firebase-functions": "^2.1.0"
  },
  "private": true,
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1"
  }
}
