    "logs": "firebase functions:log",
    "test": "mocha",
    "test-all": "nyc mocha test/index.test.js 2>&1 | tee test.log"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "firebase-admin": "^6.5.1",
    "firebase-functions": "^2.2.0"
  },
  "private": true,
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0"
  },
  "engines": {
    "node": "8"
  }
}
